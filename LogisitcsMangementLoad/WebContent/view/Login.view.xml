<mvc:View  controllerName="logisticsmanagementsystem.controller.Login" xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m" >
   <App id="app">
   <pages>
   <Page id="page" title="Welcome">
   <content >
   <VBox>
   <HBox justifyContent="Center" >
   <Image src="./view/saudilogo.png" width = "20rem" class="sapUiLargeMargin show_bg_2"/>
   </HBox>
   			<HBox fitContainer="true" justifyContent="Center" alignItems="Center"
				alignContent="Center">
				<items>
					<GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout card" 
						header="Loader" subheader="" id="idLoader" type="Navigation" press="onLoader">
						<TileContent>
							<ImageContent src="sap-icon://product" />
						</TileContent>
					</GenericTile>
					<GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout card"
						header="Dispatcher" subheader="" id="idDispatcher" press="onDispatcher">
						<TileContent>
							<ImageContent src="sap-icon://inventory" />
						</TileContent>
					</GenericTile>
				</items>
			</HBox>
			<HBox justifyContent="Center">
			<Text text="{i18n>rights}" class="sapUiMediumMarginTop"/>
			</HBox>
  </VBox>
      </content>
      </Page>
      </pages>
  </App>
</mvc:View>