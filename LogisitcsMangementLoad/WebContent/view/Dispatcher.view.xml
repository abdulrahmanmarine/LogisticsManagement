<mvc:View
	controllerName="logisticsmanagementsystem.controller.Dispatcher"
	xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m"
	xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form">

	<SplitApp initialMaster="master" initialDetail="detail">
		<masterPages>
			<Page id="master2" title="Dispatcher Plans" showNavButton="true"
				navButtonPress="onNavButton">

				<List id="invoiceList" class="sapUiResponsiveMargin"
					width="auto" items="{plan>/Plan}" selectionChange="onPlanSelects"
					mode="SingleSelectMaster">

					<items>
						<CustomListItem class="Plancard">
							<Toolbar class="PlanCardHDR">
								<Text text="Plan id:" class="bold title " />
								<Text text="{plan>ZuphrLpid}" class="bold" />


								<ObjectStatus class="sapUiLargeMarginBegin"
									text="
						{plan>ZuphrStatus}
					"
									state="{
					path: 'plan>ZuphrStatus',
						formatter: '.formatter.statusText'
					}" />


							</Toolbar>

							<HBox>
								<VBox
									class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom">
									<HBox>
										<Text text="Destination: " />
										<Text text="{plan>ZuphrStation}" class="PlancardText" />
									</HBox>
									<HBox>
										<Text text="Vessel: " />
										<Text text="{plan>ZuphrRqtype}" class="PlancardText" />
									</HBox>
									<HBox>
										<Text text="Date: " />
									</HBox>
									<HBox>
										<Text text="Time: " />
									</HBox>
								</VBox>
							</HBox>

						</CustomListItem>

					</items>
				</List>

			</Page>
		</masterPages>

		<detailPages>
			<Page id="detail" title="{selectedPlan>/ZuphrLpid}"
				backgroundDesign="Solid">
				<l:Grid defaultSpan="L12 M12 S12" width="auto">
					<l:content>
						<HBox>

							<f:SimpleForm id="simpleform" minwidth="1024"
								editable="false" layout="ResponsiveGridLayout" labelSpanL="3"
								labelSpanM="3" emptySpanL="4" meptySpanM="4" columnsL="1">
								<f:content>
									<Text text="Plan No:" class="bold" />
									<Text id="textPlanNo" text="{selectedPlan>/ZuphrLpid}" />
									<Text text="Vessel:" class="bold" />
									<Text id="textVessel" text="{selectedPlan>/ZuphrRqtype}" />
								</f:content>
							</f:SimpleForm>

							<f:SimpleForm id="simpleform2" minwidth="1024"
								editable="false" layout="ResponsiveGridLayout" labelSpanL="3"
								labelSpanM="3" emptySpanL="4" meptySpanM="4" columnsL="1">
								<f:content>
									<Text text="Destination: " class="bold" />
									<Text id="textDest" text="{selectedPlan>/ZuphrLpuser}" />

								</f:content>
							</f:SimpleForm>

							<f:SimpleForm id="simpleform3" minwidth="1024"
								editable="false" layout="ResponsiveGridLayout" labelSpanL="3"
								labelSpanM="3" emptySpanL="4" meptySpanM="4" columnsL="1">
								<f:content>
									<Text text="Date: " class="bold" />
									<Text id="textDate" text="{selectedPlan>/ZuphrLpdate}" />
									<Text text="Time: " class="bold" />
									<Text id="textTime" text="{selectedPlan>/ZuphrLptime}" />

								</f:content>
							</f:SimpleForm>

							<f:SimpleForm id="simpleform4" minwidth="1024"
								editable="false" layout="ResponsiveGridLayout" labelSpanL="3"
								labelSpanM="3" emptySpanL="4" meptySpanM="4" columnsL="1">
								<f:content>
									<Text text="Status: " class="bold" />
									<Text id="textStatus" text="{selectedPlan>/ZuphrStatus}" />
								</f:content>
							</f:SimpleForm>

						</HBox>
					</l:content>
				</l:Grid>

				<Table id="tableItems" alternateRowColors="true"
					items="{LPConfitems>/}"
					itemPress="">
					<headerToolbar>
						<Toolbar>
							<SearchField width="80%" search="onSearch" />

							<ToolbarSpacer />


						</Toolbar>
					</headerToolbar>
					<columns>
						<Column>
							<header>
								<Text text="Image" class="bold" />
							</header>
						</Column>

						<Column>
							<header>
								<Text text="Equipment ID" class="bold" />
							</header>
						</Column>

						<Column>
							<header>
								<Text text="Description" class="bold" />
							</header>
						</Column>

						<Column>
							<header>
								<Text text="Status" class="bold" />
							</header>
						</Column>

						<Column>
							<header>
								<Text text="Action" class="bold" />
							</header>
						</Column>


					</columns>


					<items>

						<ColumnListItem vAlign="Middle">
							<Image src="{LPConfitems>ZuphrContents}" width="4rem" />
							<Text text="{LPConfitems>ZuphrMblpo}" />
							<Text text="{LPConfitems>ZuphrDescrip}" />
							<Text text="{LPConfitems>ZuphrStatus}" />
		<Button text="Open Dialog" press="onOpenAssignment"></Button>

						</ColumnListItem>
					</items>


				</Table>
			</Page>
		</detailPages>
	</SplitApp>

</mvc:View>